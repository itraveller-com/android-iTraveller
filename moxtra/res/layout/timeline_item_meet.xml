<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:paddingTop="@dimen/timeline_item_padding"
    android:paddingBottom="@dimen/timeline_item_padding">

    <ImageView
        android:id="@+id/iv_thumbnail"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:cropToPadding="true"
        android:scaleType="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/meet_logo_timeline" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_thumbnail"
        android:layout_toRightOf="@+id/iv_thumbnail"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginRight="5dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Unknown"
        android:textColor="@android:color/black"
        android:textSize="21sp" />

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_thumbnail"
        android:layout_below="@+id/text2"
        android:baselineAligned="false"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/btn_panel"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/darker_gray_36"
                android:text="@string/Unknown"
                android:textSize="16sp"
                android:visibility="gone" />

            <com.moxtra.binder.widget.EmojiocnEllipsizedMultilineTextView
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_marginTop="5dp"
                android:text="@string/has_invited_to_join_this_chat"
                android:textColor="@color/darker_gray_36"
                android:textSize="@dimen/text_size_14" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_panel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/timeline_item_padding"
            android:gravity="center_vertical">

            <Button
                style="@style/MXTopicListApproveButton"
                android:id="@+id/btn_accept"
                android:minWidth="67dp"
                android:text="@string/Accept" />

            <ImageButton
                android:id="@+id/btn_reject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/topiclist_reject"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/right_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/topiclist_favorite"
                android:visibility="gone" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout><!-- From: file:/var/lib/jenkins/jobs/Build_2.11_ep1_Based_Chat_SDK/workspace/android/branches/2.11_ep1/resources/res/layout/timeline_item_meet.xml -->