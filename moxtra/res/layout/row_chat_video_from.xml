<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/tv_timer_stamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="12min ago"
        android:textColor="@color/darker_gray_36"
        android:textSize="@dimen/text_size_12"
        android:visibility="gone" />

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/tv_timer_stamp" />

    <TextView
        android:id="@+id/tv_actor_name"
        style="@style/MXChatFromTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_timer_stamp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/avatar"
        android:layout_toRightOf="@+id/avatar"
        android:ellipsize="end"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <LinearLayout
        android:id="@+id/layout_info_container"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_alignLeft="@+id/avatar"
        android:layout_alignTop="@+id/avatar"
        android:padding="5dp"
        android:layout_marginTop="@dimen/chat_avatar_margin"
        android:layout_marginLeft="@dimen/chat_avatar_margin"
        android:layout_alignWithParentIfMissing="true"
        android:background="@drawable/row_chat_from_bg"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/iv_video_src"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/iv_video_play_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/play_button" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="-8dp"
            android:layout_marginTop="-5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_annotate_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:src="@drawable/selector_annotation_chat" />

            <ImageView
                android:id="@+id/iv_comment_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/comment_chat" />

            <TextView
                android:id="@+id/tv_comment_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="-10dp"
                android:layout_marginRight="5dp"
                android:textSize="9sp" />

            <ImageView
                android:id="@+id/iv_note_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:src="@drawable/note_chat" />

            <ImageView
                android:id="@+id/iv_extra_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:src="@drawable/pageview_toolbar_actions" />
        </LinearLayout>

    </LinearLayout>

    <com.moxtra.binder.widget.MXAvatarImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/chat_avatar_size"
        android:layout_height="@dimen/chat_avatar_size"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/separator" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/layout_info_container"
        android:layout_alignTop="@id/layout_info_container"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pin_indicator" />

        <ImageView
            android:id="@+id/iv_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chat_favorite_button" />
    </LinearLayout>

</RelativeLayout><!-- From: file:/var/lib/jenkins/jobs/Build_2.11_ep1_Based_Chat_SDK/workspace/android/branches/2.11_ep1/resources/res/layout/row_chat_video_from.xml -->