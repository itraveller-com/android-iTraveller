<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/search_action_bar_bg"
    android:minHeight="@dimen/action_bar_height">

    <Button
        android:id="@+id/btn_left_text"
        style="@style/MoxFlatButton"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="left|center_vertical"
        android:drawableLeft="@drawable/white_navigatorbar_back"
        android:text="@string/Back"
        android:textColor="@android:color/white"
        android:layout_marginLeft="@dimen/header_bar_margin" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/btn_right_text"
        android:layout_toRightOf="@+id/btn_left_text"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:paddingLeft="@dimen/action_bar_title_left_padding"
        android:textColor="@android:color/white"
        android:textSize="@dimen/header_bar_title_size" />

    <Button
        android:id="@+id/btn_right_text"
        style="@style/MoxFlatButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="@dimen/header_bar_margin"
        android:visibility="invisible"
        android:gravity="right|center_vertical"
        android:textStyle="bold" />

</RelativeLayout><!-- From: file:/var/lib/jenkins/jobs/Build_2.11_ep1_Based_Chat_SDK/workspace/android/branches/2.11_ep1/resources/res/layout/search_action_bar.xml -->