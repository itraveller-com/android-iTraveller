            android:name="com.itraveller.dragsort.AirportList"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="com.itraveller.activity.ActivitiesActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="com.itraveller.activity.HotelActivity"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name=".dashboard.ViewDetailsActivity"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name=".dashboard.MyTravelUploadActivity"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name="com.itraveller.chat.FileChooser"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name="com.itraveller.chat.UploadActivity"
            android:screenOrientation="portrait"></activity>

        <activity android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:label="@string/app_name" />
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/app_id"/>
        <meta-data android:name="com.facebook.sdk.ApplicationName"
            android:value="@string/facebook_app_name" />
        <meta-data android:name="com.google.android.maps.v2.API_KEY" android:value="AIzaSyC-SesnLxkFZ_BHCKJeABKvpgp8Puih67I "/>

        <provider android:authorities="com.facebook.app.FacebookContentProvider413312058876692"
            android:name="com.facebook.FacebookContentProvider"
            android:exported="true"/>

        <uses-library android:name="com.google.android.maps"/>

        <!--chat -->
        <activity android:name="com.itraveller.chat.GridViewScreen" android:screenOrientation="portrait"></activity>

        <activity android:name="com.itraveller.chat.ChatMain" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.DELETE" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="com.itraveller" />
            </intent-filter>
        </activity>


        <activity android:name="com.itraveller.chat.GCMRegistrationActivity" android:screenOrientation="portrait"></activity>

        <activity android:name="com.itraveller.chat.ShowMessage" android:screenOrientation="portrait"></activity>

        <receiver
            android:name="com.itraveller.gcm.chat_files.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <!-- Receives the actual messages. -->
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <!-- Receives the registration id. -->
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />
                <category android:name="com.itraveller" />
            </intent-filter>
        </receiver>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <service android:name="com.itraveller.gcm.chat_files.GCMIntentService" android:exported="false" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>

    </application>

