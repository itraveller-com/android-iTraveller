<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:background="@drawable/collage_img"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    android:fillViewport="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/login_form"
            android:gravity="center"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:orientation="vertical"
                android:focusableInTouchMode="true"
                android:focusable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome to"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:gravity="center"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/itraveller_logo_"
                    android:cropToPadding="true"
                    android:adjustViewBounds="true"
                    android:id="@+id/itraveller_logo_ic" />

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="vertical"
                    android:id="@+id/login_form_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your Trip. Your Way"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginBottom="15dp" />

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/email_ic"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_email_black_24dp"
                        android:layout_alignTop="@+id/email_id"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="48dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:id="@+id/email_id"
                        android:hint="Email"
                        android:layout_marginTop="5dp"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="8dp"
                        android:textColor="@color/orange"
                        android:textColorHint="@color/orange"
                        android:layout_alignParentTop="true"
                        android:textSize="16sp"
                        android:layout_toRightOf="@+id/email_ic"
                        android:layout_toEndOf="@+id/email_ic" />

                </RelativeLayout>

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/mobile_ic"
                        android:layout_width="25dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_height="25dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_call_black_24dp"
                        android:layout_alignTop="@+id/mobile"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="48dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:hint="Mobile Number"
                        android:inputType="number"
                        android:singleLine="true"
                        android:maxLength="15"
                        android:id="@+id/mobile"
                        android:paddingLeft="8dp"
                        android:textColor="@color/orange"
                        android:textColorHint="@color/orange"
                        android:textSize="16sp"
                        android:layout_toRightOf="@+id/mobile_ic"
                        android:layout_toEndOf="@+id/mobile_ic" />


                </RelativeLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/orange"
                    android:id="@+id/submit"
                    android:text="Sign up"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Already has account! Login here"
                    android:id="@+id/link_to_login"
                    android:layout_marginTop="55dp"
                    android:textColor="@color/orange"
                    android:textAlignment="gravity"
                    android:layout_gravity="center"
                    android:gravity="center" />




            </LinearLayout>



        </LinearLayout>
</ScrollView>
