<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Hotels"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/hotel_place_name"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="3dp"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        card_view:cardElevation="4dp"
        android:layout_marginBottom="5dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="?android:attr/selectableItemBackground"
        android:focusable="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <android.support.v4.view.ViewPager
            android:id="@+id/list_pager"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:paddingTop="10dp"/>

        <RelativeLayout
            android:id="@+id/rel_left_arrow"
            android:layout_width="40dp"
            android:layout_height="190dp"
            android:gravity="center"
            android:layout_marginLeft="10dp">

            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/curve_hotel_arrow">

                <ImageView
                    android:id="@+id/left_arrow"
                    android:layout_width="35dp"
                    android:src="@drawable/left_arrow_image"
                    android:layout_height="35dp"
                    android:layout_gravity="left"
                    android:padding="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="190dp"
            android:id="@+id/rel_right_arrow"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@drawable/curve_hotel_arrow">

                <ImageView
                    android:id="@+id/right_arrow"
                    android:layout_width="35dp"
                    android:src="@drawable/right_arrow_image"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:padding="5dp" />
            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>