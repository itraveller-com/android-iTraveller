<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Hotels"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/hotel_place_name"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp" />

    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <android.support.v4.view.ViewPager
            android:id="@+id/list_pager"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:paddingTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <RelativeLayout
            android:id="@+id/rel_left_arrow"
            android:layout_width="70dp"
            android:layout_height="180dp"
            android:gravity="center|right"
            android:clickable="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/curve_hotel_arrow">

                <ImageView
                    android:id="@+id/left_arrow"
                    android:layout_width="50dp"
                    android:src="@drawable/left_arrow_image"
                    android:layout_height="50dp"
                    android:layout_gravity="left"
                    android:padding="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="180dp"
            android:id="@+id/rel_right_arrow"
            android:gravity="center|left"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="@drawable/curve_hotel_arrow">

                <ImageView
                    android:id="@+id/right_arrow"
                    android:layout_width="50dp"
                    android:src="@drawable/right_arrow_image"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:padding="5dp" />
            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>
</LinearLayout>